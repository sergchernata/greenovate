<div class="section carousel">
    <h3>Onze producten en diensten<br/><strong>uw voordelen</strong></h3>
    <div class="wrap">
        <div class="container">
            <div class="row justify-content-md-center">
                <div class="col-12 col-md-6">
                    <span class="index">{{this.carouselIndex}}</span>
                    <BsCarousel
                        @autoPlay={{true}}
                        @wrap={{true}}
                        @index={{0}}
                        @interval={{5000}}
                        @keyboard={{true}}
                        @ltr={{true}}
                        @pauseOnMouseEnter={{true}}
                        @showControls={{true}}
                        @showIndicators={{false}}
                        @onSlideChanged={{action "slideChanged"}}
                        as |car|>
                            {{#each this.slides as |slide|}}
                                <car.slide>
                                    <div class="d-flex slide align-items-center">
                                        <img src="img/icons/{{slide.image}}" alt={{slide.alt}}/>
                                        <div class="d-flex flex-column justify-content-center">
                                            <h5>{{slide.title}}</h5>
                                            <p>{{slide.text}}</p>
                                        </div>
                                    </div>
                                </car.slide>
                            {{/each}}
                    </BsCarousel>
                </div>
            </div>
        </div>
    </div>
</div>

