<div id="wrap">
    <header>
        <div class="container d-flex justify-content-between align-items-center">
            <LinkTo @route="index">
                <img src="/img/logo.svg" alt="Greenovate logo" />
            </LinkTo>
            <nav class="navbar-nav ml-auto d-none d-md-flex flex-direction-row d-none d-md-block">
                <LinkTo @route="product.klimaattechniek">
                    Klimaattechniek
                </LinkTo>
                <LinkTo @route="product.dakhuur">
                    Dakverhuur
                </LinkTo>
                <LinkTo @route="product.led-verlichting">
                    Led Verlichting
                </LinkTo>
            </nav>
            {{#if (eq currentRouteName 'index')}}
                <a class="btn btn-primary cta d-none d-md-block" href="#contact-us" {{action 'scrollTo' 'contact-us'}}>Offerte aanvragen</a>
            {{else}}
                <a class="btn btn-primary cta d-none d-md-block" href="#contact-us" {{action (mut this.showQuoteForm) true}}>Offerte aanvragen</a>
            {{/if}}

            <button data-toggle="collapse" data-target="#navbar-collapse" aria-controls="navbar-collapse" aria-label="Toggle navigation" class="navbar-toggler collapsed d-sm-block d-md-none" id="mobile-nav-toggle" type="button" {{action 'toggleNav'}}>
                <MdIcon @icon="menu"/>
            </button>
        </div>
    </header>

    {{outlet}}

    <footer>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-5">
                    <ul>
                        <li>
                            <span>Phone:</span> 06 373 364 82
                        </li>
                        <li>
                            <span>Email:</span> info@greenovate.nl
                        </li>
                        <li class="address">
                            <span>Address:</span><br/>
                            Noordenveld 27<br/>
                            8245 CP
                        </li>
                    </ul>
                </div>
                <div class="col-12 col-md-5">
                    <ul>
                        <li>
                            <LinkTo @route="product.klimaattechniek">
                                Klimaattechniek
                            </LinkTo>
                        </li>
                        <li>
                            <LinkTo @route="product.dakhuur">
                                Dakverhuur
                            </LinkTo>
                        </li>
                        <li>
                            <LinkTo @route="product.led-verlichting">
                                Led Verlichting
                            </LinkTo>
                        </li>
                    </ul>
                </div>
                <div class="col-12 col-md-2">
                    <LinkTo @route="privacyverklaring">
                        Privacyverklaring
                    </LinkTo>
                    <p>&copy; Greenovate 2020</p>
                </div>
            </div>
        </div>
    </footer>

    <aside id="mobile-nav">

        <LinkTo @route="index" @invokeAction={{action 'toggleNav'}}>
            <img src="/img/logo-light.svg" alt="Greenovate logo" />
        </LinkTo>

        <ul>
            <li>
                <LinkTo @route="product.klimaattechniek" @invokeAction={{action 'toggleNav'}}>
                    Klimaattechniek
                </LinkTo>
            </li>
            <li>
                <LinkTo @route="product.dakhuur" @invokeAction={{action 'toggleNav'}}>
                    Dakverhuur
                </LinkTo>
            </li>
            <li>
                <LinkTo @route="product.led-verlichting" @invokeAction={{action 'toggleNav'}}>
                    Led Verlichting
                </LinkTo>
            </li>
        </ul>
    </aside>

    <QuoteModal @showQuoteForm={{this.showQuoteForm}}/>

    <div id="popout" class="{{if this.hidePopout 'hide' ''}}">
        <a href="#contact-us" {{action (mut this.showQuoteForm) true}}>
            {{!-- <img src="" alt="request a roof scan"> --}}
            <p>Wilt u weten <strong>wat uw dak<br/>waard is?</strong> Klik dan hier.</p>
        </a>
        <button class="btn btn-danger" type="button" {{action (mut this.hidePopout) true}}><MdIcon @icon="close"/></button>
    </div>
</div>